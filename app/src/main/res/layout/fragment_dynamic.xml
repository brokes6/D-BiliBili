<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/While">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/Dy_tab"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            app:tl_iconMargin="2dp"
            app:tl_indicator_bounce_enable="true"
            app:tl_indicator_color="@color/Pink"
            app:tl_indicator_width_equal_title="true"
            app:tl_textSelectColor="@color/Pink"
            app:tl_textUnselectColor="#838080"
            app:tl_textsize="16sp"
            app:tl_underline_height="1dp" />

        <TextView
            android:id="@+id/xian_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/Dy_tab"
            android:background="#e7e7e7" />

        <LinearLayout
            android:id="@+id/Sy_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_below="@+id/xian_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:background="@drawable/file_background_radius_30_while_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/search_24_c1bfc0" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="1"
                android:text="查找精彩动态内容"
                android:textColor="#c1bfc0"
                android:textSize="14sp" />
        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/Dy_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/Sy_text" />
    </RelativeLayout>
</layout>
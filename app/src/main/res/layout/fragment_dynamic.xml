<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Pink">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/Dy_tab"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            app:tl_iconMargin="2dp"
            app:tl_indicator_bounce_enable="true"
            app:tl_indicator_color="@color/While"
            app:tl_indicator_width_equal_title="true"
            app:tl_textBold="BOTH"
            app:tl_textSelectColor="@color/While"
            app:tl_textUnselectColor="#D5D5D5"
            app:tl_textsize="16sp" />

        <com.example.dildil.rewriting_view.CustomViewPager
            android:id="@+id/Dy_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/Dy_tab"
            android:layout_marginTop="@dimen/dp_5" />
    </RelativeLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/Sy_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/file_background_radius_30_while_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:src="@drawable/search_24" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:text="查找精彩动态内容"
                    android:textColor="#c1bfc0"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/xian_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/Sy_text"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#e7e7e7" />

            //话题

            <RelativeLayout
                android:id="@+id/Main_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xian_2"
                android:layout_margin="@dimen/dp_15">

                <TextView
                    android:id="@+id/Text_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="话题"
                    android:textStyle="bold"
                    android:textColor="#202020"
                    android:textSize="18sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Recy_topic"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/Text_topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:id="@+id/Dividing_line"
                android:layout_below="@+id/Main_topic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:background="#f4f4f4"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Recy_dynamic"
                android:layout_below="@+id/Dividing_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f4f4f4"
                android:nestedScrollingEnabled="false"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rc="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Hot_video_cover"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_95"
    android:layout_marginTop="@dimen/dp_10">

    <com.android.liuzhuang.rcimageview.RoundCornerImageView
        android:id="@+id/Ranking_video_img"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_80"
        android:scaleType="centerCrop"
        rc:rciv_radius="@dimen/dp_5" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:layout_alignRight="@+id/Ranking_video_img"
        android:layout_alignBottom="@+id/Ranking_video_img"
        android:background="@drawable/file_background_white_gradient" />

    <TextView
        android:id="@+id/Ranking_video_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Ranking_video_img"
        android:layout_alignBottom="@+id/Ranking_video_img"
        android:layout_margin="@dimen/dp_5"
        android:text=""
        android:textColor="#fff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/Ranking_video_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/Ranking_video_img"
        android:maxLines="2"
        android:text=""
        android:textColor="#000000"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/up_img"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_above="@+id/play_num_img"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/Ranking_video_img"
        android:src="@mipmap/up" />

    <TextView
        android:id="@+id/Ranking_video_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/up_img"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_toEndOf="@+id/up_img"
        android:text=""
        android:textColor="#999999"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/play_num_img"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_alignBottom="@+id/Ranking_video_img"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/Ranking_video_img"
        android:src="@drawable/ic_play_num" />

    <TextView
        android:id="@+id/Ranking_video_play_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/play_num_img"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_toEndOf="@+id/play_num_img"
        android:textColor="#999999"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/Ranking_video_img"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#e7e7e7" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rc="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainOnClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_10">

    <com.android.liuzhuang.rcimageview.RoundCornerImageView
        android:id="@+id/videoImage"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_80"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:scaleType="centerCrop"
        rc:rciv_radius="@dimen/dp_3" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toEndOf="@+id/videoImage"
        android:maxLines="2"
        android:textColor="@color/Black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/videoImage"
        android:layout_toEndOf="@+id/videoImage"
        android:textColor="@color/Text_gray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/danmu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/score"
        android:layout_toEndOf="@+id/videoImage"
        android:textColor="@color/Text_gray"
        android:textSize="13sp" />


    <com.android.liuzhuang.rcimageview.CircleImageView
        android:id="@+id/upImage"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@+id/videoImage"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15" />

    <TextView
        android:id="@+id/upName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videoImage"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@+id/upImage"
        android:textColor="@color/Black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upName"
        android:layout_alignBottom="@+id/upImage"
        android:textColor="@color/Text_gray"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videoImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/file_background_follow_while"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_3"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_3"
        android:text="+关注"
        android:textColor="@color/Pink"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/upImage"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#e7e7e7" />

</RelativeLayout>
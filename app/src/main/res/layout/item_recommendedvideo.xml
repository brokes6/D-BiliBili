<?xml version="1.0" encoding="utf-8"?>
<com.example.dildil.rewriting_view.RoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Re_video_cover"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_4"
    android:background="@color/While"
    app:rlRadius="@dimen/dp_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Re_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:scaleType="fitXY" />

        <View
            android:id="@+id/Occlusion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_28"
            android:layout_alignBottom="@+id/Re_cover"
            android:background="@drawable/file_background_white_gradient" />

        <ImageView
            android:id="@+id/Re_play"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignBottom="@+id/Occlusion"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_3"
            android:src="@mipmap/playback_volume" />

        <TextView
            android:id="@+id/Re_play_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Occlusion"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_toEndOf="@+id/Re_play"
            android:textColor="#e6e6e6"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/R_barrage"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignBottom="@+id/Occlusion"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_toEndOf="@+id/Re_play_volume"
            android:src="@mipmap/barrage_volume" />

        <TextView
            android:id="@+id/Re_barrage_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Occlusion"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_toEndOf="@+id/R_barrage"
            android:textColor="#e6e6e6"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/Re_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Occlusion"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_3"
            android:textColor="#fff"
            android:textSize="11sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_69"
            android:layout_below="@+id/Occlusion">

            <TextView
                android:id="@+id/Re_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#212121"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Re_classification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Re_more"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_3"
                android:text="分类 · 分类"
                android:textColor="#999999"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/Re_more"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_3"
                android:src="@drawable/more_vert_24" />
        </RelativeLayout>
    </RelativeLayout>
</com.example.dildil.rewriting_view.RoundRelativeLayout>
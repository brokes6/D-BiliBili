<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.gcssloop.widget.RCRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:round_corner="5dp">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/volume"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_28"
            android:layout_alignBottom="@+id/cover">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:alpha="0.4"/>
            <ImageView
                android:id="@+id/R_play"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:src="@mipmap/playback_volume"/>
            <TextView
                android:id="@+id/R_play_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/R_play"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="#e6e6e6"
                android:text="100"/>
            <ImageView
                android:id="@+id/R_barrage"
                android:layout_toRightOf="@+id/R_play_volume"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:src="@mipmap/barrage_volume"/>
            <TextView
                android:id="@+id/R_barrage_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@+id/R_barrage"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="#e6e6e6"
                android:text="100"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/volume"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:background="#fff">

            <TextView
                android:id="@+id/R_title"
                android:layout_margin="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="2"
                android:textColor="#514F4F"
                android:text="为什么为什么为什么"/>
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/more_vert_24"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>
    </com.gcssloop.widget.RCRelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Props_column"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:animateLayoutChanges="true"
    android:background="@color/While"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Props_columnS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/thumbsUp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/like_img"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/thumb_up_no" />

            <TextView
                android:id="@+id/praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/like_img"
                android:layout_centerHorizontal="true"
                android:textColor="#757575"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/noLike"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/thumb_down_no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noLike"
                android:layout_centerHorizontal="true"
                android:text="不喜欢"
                android:textColor="#757575"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_coin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.example.customcontrollibs.AnnularProgressButton
                android:id="@+id/coin_circleView"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                app:radius="10dp"
                app:ringColor="@color/Pink"
                app:strokeWidth="2dp" />

            <ImageView
                android:id="@+id/coinImg"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/ic_coin" />

            <TextView
                android:id="@+id/coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coinImg"
                android:layout_centerHorizontal="true"
                android:textColor="#757575"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/CollectionMain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.example.customcontrollibs.AnnularProgressButton
                android:id="@+id/Collection_circleView"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                app:radius="10dp"
                app:ringColor="@color/Pink"
                app:strokeWidth="2dp" />

            <ImageView
                android:id="@+id/Collection"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/ic_collection" />

            <TextView
                android:id="@+id/CollectionNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Collection"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="#757575"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ForwardMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/Forward"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/ic_forward" />

            <TextView
                android:id="@+id/ForwardNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Forward"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="#757575"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>